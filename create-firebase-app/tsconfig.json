{
  "compilerOptions": {
    "strict": true /* enable all strict type-checking options */,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDirs": ["src", "../src", "common"],
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "common/**/*", "../src/types/**/*", "package.json", "../package.json"]
}
