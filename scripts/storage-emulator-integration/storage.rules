rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write;
    }

    match /topLevel {
      allow list;
    }

    match /testing/{allPaths=**} {
      allow read, create, update, delete: if request.auth != null;
    }

    match /list/{allPaths=**} {
      allow list;
      allow create;
    }

    match /listAll/{allPaths=**} {
      allow list: if request.auth != null;

    match /listAll/{subDir}/{fileName} {
      allow list;
    }

    match /listAll/{allPaths=**} {
      allow write;
    }

    match /delete {
      match /disallowIfContentTypeText {
        allow create;
        allow delete: if resource.contentType != 'text/plain';
      }
    }

    match /upload {
      match /allowIfContentTypeImage.png {
        allow create: if request.resource.contentType == 'image/blah';
      }
      match /replace.txt {
        allow read, create;
      }
    }

    match /public/{allPaths=**} {
      allow read, write;
    }
  }
}

