    "morgan": "^1.10.0",
    "node-fetch": "^2.6.7",
    "open": "^6.3.0",
    "ora": "^5.4.1",
    "p-limit": "^3.0.1",
    "portfinder": "^1.0.32",
    "progress": "^2.0.3",
    "proxy-agent": "^6.3.0",
    "retry": "^0.13.1",
    "rimraf": "^3.0.0",
    "semver": "^7.5.2",
    "stream-chain": "^2.2.4",
    "stream-json": "^1.7.3",
    "strip-ansi": "^6.0.1",
    "superstatic": "^9.0.3",
    "tar": "^6.1.11",
